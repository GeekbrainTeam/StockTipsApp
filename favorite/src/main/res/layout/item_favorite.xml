<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_4"
    android:background="@drawable/rectangle_shape">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brief_name_favorite_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Brief name"
        android:textColor="@color/md_theme_light_outline"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_favorite_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:text="Name"
        android:textColor="@color/md_theme_light_outline"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/brief_name_favorite_textview"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_favorite_this"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:button="@drawable/checkbox_favorite_selector"
        android:padding="@dimen/margin_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_favorite_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:text="price â‚½ "
        android:textColor="@color/md_theme_light_outline"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_favorite_textview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/change_favorite_price_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingBottom="12dp"
        android:text="-11 (0.25%) "
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/price_favorite_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price_favorite_textview" />

    <HorizontalScrollView
        android:id="@+id/candle_favorite_sv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:background="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/favorite_axisYView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_favorite_textview">

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <ru.amk.favorite.ui.baseviewchart.AxisYViewImpl
        android:id="@+id/favorite_axisYView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/candle_favorite_sv" />


</androidx.constraintlayout.widget.ConstraintLayout>