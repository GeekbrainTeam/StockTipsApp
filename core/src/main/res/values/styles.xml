<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_dialog_sort">
        <item name="android:background">@drawable/rectangle_dialog_sort</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="style_bottom_action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_shape_sort_action</item>
    </style>

    <style name="style_bottom_navigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="search_edit_text">
        <item name="android:background">@drawable/rectangle_shape_edit_text</item>
    </style>

    <style name="sort_button">
        <item name="android:background">@drawable/circle_shape_sort_button</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>